        <Button Grid.Column="0" Grid.Row="1" Content="Объединение трех столбцов" Grid.ColumnSpan="3"  />

        <TabControl Grid.Row="0" Grid.Column="0"  
                    Grid.ColumnSpan="3" MinHeight="20" MaxHeight="20" Height="20">
            
        </TabControl>
    </Grid>
</Window>
